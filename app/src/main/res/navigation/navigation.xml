<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.statsdontlie.fragments.MainFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_mainFragment_to_playersFragment"
            app:destination="@id/playersFragment" />
    </fragment>
    <fragment
        android:id="@+id/playersFragment"
        android:name="com.example.statsdontlie.fragments.PlayersFragment"
        android:label="@string/players" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.statsdontlie.fragments.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />
</navigation>